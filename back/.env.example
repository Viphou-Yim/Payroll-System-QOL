MONGODB_URI=mongodb://localhost:27017/payroll_db
PORT=4000
ROUND_DECIMALS=2
# Admin login (used for simple single-user login). Defaults: admin / password
ADMIN_USER=admin
ADMIN_PASSWORD=password
# Optional role for the admin user
ADMIN_ROLE=admin
# Session cookie secret
SESSION_SECRET=dev-session-secret

# CUT group rules (can be overridden per-employee or per-group in the app)
CUT_GROUP_20_DEDUCTION_AMOUNT=20
CUT_GROUP_10DAY_HOLDING_DAYS=10
