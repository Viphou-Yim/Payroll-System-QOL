{
  "name": "payroll",
  "version": "1.0.0",
  "description": "Payroll system with Electron desktop app",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently -n back,front -c yellow,cyan \"npm --prefix back run dev\" \"npm --prefix front run start\"",
    "desktop:dev": "concurrently -n electron,back,front -c magenta,yellow,cyan \"wait-on http://localhost:4000 && electron .\" \"npm --prefix back run dev\" \"npm --prefix front run start\"",
    "desktop:build": "npm run desktop:build:prep && npm run build:win",
    "desktop:build:prep": "npm --prefix back run build --if-present && npm --prefix front run build --if-present",
    "build:win": "electron-builder --win --publish never"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.3",
    "mongoose": "^7.5.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "latest",
    "electron": "latest",
    "electron-builder": "^26.8.1",
    "wait-on": "latest"
  },
  "build": {
    "appId": "com.payroll.app",
    "productName": "Payroll System",
    "files": [
      "electron/**/*",
      "back/**/*",
      "front/public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Payroll System"
    }
  }
}
